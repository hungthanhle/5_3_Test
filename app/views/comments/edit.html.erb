<h1>Edit comment</h1>
<p>
  <strong>Commenter:</strong>
  <%= @comment.commenter %>
</p>
 
<p>
  <strong>Comment:</strong>
  <%= @comment.body %>
</p>
<%= form_for [@article, @comment] do |form| %>
 
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  
  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end%>

